@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="account-page">
    <div class="small-container cart-page">
        <table>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Subtotal</th>
            </tr>
            <tr>
                <td>
                    <div class="cart-info">
                        <img src="https://seeyashop.netlify.app/images/electronic/speaker2.jpg" alt="Speaker">
                        <div>
                            <p>Speaker</p>
                            <small>Price: ₹340.00</small>
                            <br>
                            <a href="#">Remove</a>
                        </div>
                    </div>
                </td>
                <td><input type="number" value="1"></td>
                <td>₹340.00</td>
            </tr>
            <tr>
                <td>
                    <div class="cart-info">
                        <img src="https://seeyashop.netlify.app/images/gifts/fram1.png" alt="Gift">
                        <div>
                            <p>Gift</p>
                            <small>Price: ₹290.00</small>
                            <br>
                            <a href="#">Remove</a>
                        </div>
                    </div>
                </td>
                <td><input type="number" value="1"></td>
                <td>₹290.00</td>
            </tr>
            <tr>
                <td>
                    <div class="cart-info">
                        <img src="https://seeyashop.netlify.app/images/footware/foot1.jpg" alt="Shoes">
                        <div>
                            <p>Shoes</p>
                            <small>Price: ₹300.00</small>
                            <br>
                            <a href="#">Remove</a>
                        </div>
                    </div>
                </td>
                <td><input type="number" value="1"></td>
                <td>₹300.00</td>
            </tr>
        </table>

        <div class="total-price">
            <table>
                <tr>
                    <td>Subtotal</td>
                    <td>₹930.00</td>
                </tr>
                <tr>
                    <td>Delivery Charge</td>
                    <td>₹40.00</td>
                </tr>
                <tr>
                    <td>Total</td>
                    <td>₹970.00</td>
                </tr>
            </table>
        </div>
    </div>
</div>

<style>
    .account-page {
        padding: 50px 0;
    }

    .small-container {
        max-width: 1080px;
        margin: auto;
        padding-left: 25px;
        padding-right: 25px;
    }

    .cart-page {
        margin: 80px auto;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th {
        text-align: left;
        padding: 5px;
        background: #ff523b;
        color: #fff;
    }

    td {
        padding: 10px 5px;
    }

        td input {
            width: 50px;
            height: 30px;
            padding: 5px;
        }

    .cart-info {
        display: flex;
        flex-wrap: wrap;
    }

        .cart-info img {
            width: 100px;
            height: 100px;
            object-fit: cover;
            margin-right: 10px;
        }

        .cart-info div {
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

    .total-price table {
        border-top: 3px solid #ff523b;
        width: 100%;
        max-width: 400px;
        float: right;
    }

        .total-price table td {
            border: none;
            padding: 10px 15px;
            text-align: right;
        }

            .total-price table td:first-child {
                text-align: left;
            }
</style>

