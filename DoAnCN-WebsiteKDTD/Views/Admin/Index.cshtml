@model DoAnCN_WebsiteKDTD.ViewModel.AdminDashboardViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Admin Dashboard</title>
    <!-- Include CSS files -->
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f7f6;
        }

        .sidebar {
            width: 250px;
            height: 100%;
            background-color: #2e3b4e;
            position: fixed;
            top: 0;
            left: 0;
            overflow-y: auto;
        }

        .sidebar-header {
            padding: 20px;
            text-align: center;
            background-color: #3b4f70;
        }

            .sidebar-header h3 {
                margin: 0;
                color: #fff;
            }

        .sidebar-menu {
            padding: 0;
            margin: 0;
            list-style: none;
        }

            .sidebar-menu li {
                padding: 15px 20px;
            }

                .sidebar-menu li a {
                    color: #fff;
                    text-decoration: none;
                    display: block;
                }

                    .sidebar-menu li a:hover {
                        background-color: #1c252e;
                    }

        .main-content {
            margin-left: 250px;
            padding: 20px;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #fff;
            padding: 10px 20px;
            box-shadow: 0 1px 5px rgba(0,0,0,0.1);
        }

        .navbar-left h2 {
            margin: 0;
        }

        .navbar-right a {
            margin-left: 15px;
            text-decoration: none;
            color: #333;
        }

        .content-header {
            margin-bottom: 20px;
        }

        .card {
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 1px 5px rgba(0,0,0,0.1);
            margin-bottom: 20px;
        }

            .card h3 {
                margin-top: 0;
            }

        .table {
            width: 100%;
            margin-bottom: 1rem;
            color: #212529;
        }

            .table th, .table td {
                padding: 0.75rem;
                vertical-align: top;
                border-top: 1px solid #dee2e6;
            }

            .table thead th {
                vertical-align: bottom;
                border-bottom: 2px solid #dee2e6;
            }

            .table tbody + tbody {
                border-top: 2px solid #dee2e6;
            }
    </style>
</head>
<body>
    <div class="admin-dashboard">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="sidebar-header">
                <h3>Admin Panel</h3>
            </div>
            <ul class="sidebar-menu">
                <li><a href="#"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
                <li><a href="#"><i class="fas fa-users"></i> Users</a></li>
                <li><a href="#"><i class="fas fa-box"></i> Products</a></li>
                <li><a href="#"><i class="fas fa-shopping-cart"></i> Orders</a></li>
                <li><a href="#"><i class="fas fa-cog"></i> Settings</a></li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="navbar">
                <div class="navbar-left">
                    <h2>Dashboard</h2>
                </div>
                <div class="navbar-right">
                    <a href="#"><i class="fas fa-bell"></i></a>
                    <a href="#"><i class="fas fa-envelope"></i></a>
                    <a href="#">Profile</a>
                    <a href="#">Logout</a>
                </div>
            </div>

            <div class="content">
                <div class="content-header">
                    <h2>Welcome to Admin Dashboard</h2>
                    <p>Manage your content here.</p>
                </div>
                <div class="content-body">
                    <!-- Users Card -->
                    <div class="card">
                        <h3>Users</h3>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.Users)
                                {
                                    <tr>
                                        <td>@user.UserId</td>
                                        <td>@user.UserName</td>
                                        <td>@user.Email</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- Products Card -->
                    <div class="card">
                        <h3>Products</h3>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model.Products)
                                {
                                    <tr>
                                        <td>@product.ProductId</td>
                                        <td>@product.ProductName</td>
                                        <td>@String.Format("{0:n0} VND", product.Price)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- Orders Card -->
                    <div class="card">
                        <h3>Orders</h3>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>User</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.Orders)
                                {
                                    <tr>
                                        <td>@order.OrderId</td>
                                        <td>@order.User.UserName</td>
                                        <td>@String.Format("{0:n0} VND", order.TotalAmount)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Include JS files -->
    <script src="~/admin/js/site.js"></script>
</body>
</html>

